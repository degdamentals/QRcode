# Configuration Apache pour le système QR Code

# Activer la réécriture d'URL
RewriteEngine On

# Définir index.html comme page par défaut
DirectoryIndex index.html

# Autoriser les requêtes CORS (Cross-Origin Resource Sharing)
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, X-Admin-Password"

# Gestion des fichiers PHP
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Protection de la base de données
<FilesMatch "\.db$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Compression pour améliorer les performances
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Cache pour les ressources statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>
